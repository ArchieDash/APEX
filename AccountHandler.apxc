public class AccountHandler {
    public static void insertAccount (Integer numOfAccts) {
        Account[] addAccounts = new List <Account> ();
        Integer counter = 1;
        while (counter <= numOfAccts) {
            Account acct = new Account();
            acct.Name = 'Acme Inc ' + counter;
            acct.AccountNumber = 'A000' + counter;
            addAccounts.add(acct);
            counter += 1;
        }
    insert addAccounts;
    }
}
